<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <display-name>food_store_searching_webpage</display-name>
  <welcome-file-list>
    <welcome-file>index.do</welcome-file>
  </welcome-file-list>
  
  <!-- 프로젝트의 루트경로를 application context에 지정  -->
  <context-param>
    <param-name>rootPath</param-name>
    <param-value>/food_store_searching_webpage</param-value>
  </context-param>
  
   <context-param>
    <param-name>contextConfigLocation</param-name>
    	<param-value>
    	 	classpath:com/food_store_searching_webpage/config/spring/web-context.xml
			classpath:com/food_store_searching_webpage/config/spring/model-context.xml
		</param-value>
  </context-param>
  
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  
  <servlet>
    <servlet-name>food_store_searching_webpage</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>classpath:com/food_store_searching_webpage/config/spring/model-context.xml</param-value>
    </init-param>
   <!--  <load-on-startup>1</load-on-startup> -->
  </servlet>
  
  <servlet-mapping>
    <servlet-name>food_store_searching_webpage</servlet-name>
    <url-pattern>*.do</url-pattern>
  </servlet-mapping>
  
    <!-- utf-8로 인코딩해주는 필터-->
  <filter>
    <filter-name>encodingFilter</filter-name>
    <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  
   <!-- url-pattern에 적힌 경로로 진입시 필터 적용 -->
  <filter-mapping>
    <filter-name>encodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  
   <filter>
    <display-name>springMultipartFilter</display-name>
    <filter-name>springMultipartFilter</filter-name>
    <filter-class>org.springframework.web.multipart.support.MultipartFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>springMultipartFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  
</web-app>